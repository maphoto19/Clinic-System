
@{
    ViewBag.Title = "ForgotPassword";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<style>
    .note {
        text-align: center;
        height: 50px;
        background: -webkit-linear-gradient(left, #0072ff, #8811c5);
        color: #fff;
        font-weight: bold;
        line-height: 50px;
    }

    .form-content {
        padding: 5%;
        border: 1px solid #ced4da;
        margin-bottom: 2%;
    }

    .form-control {
        border-radius: 1.5rem;
    }

    .btnSubmit {
        border: none;
        border-radius: 1.5rem;
        padding: 1%;
        width: 20%;
        cursor: pointer;
        background: #0062cc;
        color: #fff;
    }
</style>

<div class="container register-form">
    <div class="form">
        <div class="note">
            <p>Forgot Password</p>
        </div>
        <div class="form-content">
            <div class="form-horizontal">
                <p>
                    Forgot your password? We'll help you get back on track...
                </p>
                <hr />
                <div class="text-success">
                    @ViewBag.Message
                </div>
                @using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label class="control-label col-md-2">Email Address</label>
                        @Html.TextBox("email", "", new { @class = "form-control", @required = "required" })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-2">
                        </div>
                    </div>
                    <button type="submit" class="btnSubmit">Submit</button>

                }


            </div>
        </div>

    </div>
</div>

